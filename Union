#include<stdio.h>
#define C_SIZE 100
union address
  {
      char name[C_SIZE],hname[C_SIZE],city[C_SIZE],state[C_SIZE],pin[C_SIZE];
  }s;
void mian()
  {
      union address s;
      printf("Enter Name : ");
      scanf("%s",s.name);
      printf("Enter House Name : ");
      scanf("%s",s.hname);
      printf("Enter City : ");
      scanf("%s",s.city);
      printf("Enter State : ");
      scanf("%s",s.state);
      printf("Enter Pin Code : ");
      scanf("%s",s.pin);
      printf("\nDetails \n");
      printf("\nName : %s\nHouse Name : %s\nCity Name: %s\nState : %s\nPin Code : %s",s.name,s.hname,s.city,s.state,s.pin);
  }    
